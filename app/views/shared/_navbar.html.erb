          <% end %>
        </div>
      </div>
      <div class="button-group dd-nav">
        <% if user_signed_in? %>
          <%= link_to "CoRenters", users_path, :class => "button-text" %>
          <%= link_to "My Profile", "/users/#{current_user.id}", :class => "button-text" %>
          <%= link_to "Inbox", chatrooms_path, :class => "button-text" %>
          <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete}, :class => "button-text" %>
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, alt: "User photo", :class => "avatar" %>
          <% else %>
            <%= image_tag "placeholder.png", alt: "Placeholder avatar", :class => "avatar" %>
          <% end %>
        <% else %>
          <%= link_to "Login", "/users/sign_in", :class => "button-secondary" %>
          <%= link_to "Find a CoRenter", new_user_registration_path, :class => "button-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
