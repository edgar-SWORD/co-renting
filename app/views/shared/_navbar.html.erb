<div class="nav">
  <div class="container">
    <div class="nav-layout">
      <%= link_to "/" do %>
        <%= image_tag "logo_corent.svg", alt: "Corent logo" %>
      <% end %>
      <div class="button-group">
        <% if user_signed_in? %>
          <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete}, :class => "button-text" %>
          <%= link_to "My dashboard", "/users/#{current_user.id}", :class => "button-text" %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, alt: "Corent logo", :class => "avatar" %>
            <% else %>
              <%= image_tag "placeholder.png", alt: "Corent logo", :class => "avatar" %>
            <% end %>

          <% else %>
          <%= link_to "Find my co-parent", new_user_registration_path, class: "button-primary" %>
          <%= link_to "Login", "/users/sign_in", :class => "button-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
