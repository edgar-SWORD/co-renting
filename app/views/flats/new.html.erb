<div class="form-slide">
  <div class="question-form-wrap-step3">
    <div class="question-form-header">
      <p class= "text-color-blue text-weight-semibold text-style-allcaps text-size-small">Question 7 / 10</p>
      <div class="question-form-title">
        <h2 class="heading-style-h4">What kind of flat do you need ?</h2>
        <p>Please select how many rooms you need. Does your home need to be furnished or not ?</p>
      </div>
    </div>

    <div class="d-flex flex-row">
      <div data-controller="rooms">
        <%= simple_form_for @flat do |f| %>
          <button type="button" class="incrementation-button" data-action="click->rooms#decrement">-</button>
          <%= f.input :rooms, wrapper_html: { class: "room-input" }, input_html: { value: 1, 'data-rooms-target': 'rooms', readonly: true, class:"increment"}, label: false  %>
          <button type="button" class="incrementation-button" data-action="click->rooms#increment">+</button>
      </div>

      <div>
        <div class="furnished">
        </div>
        <%= f.input :is_furnished %>

        <div class="unfurnished">
        </div>
      </div>

        <%= f.submit %>
        <% end %>

    </div>
  </div>

   <div class="form-navigation">
    <div class="container">
      <div class="form-navigation-layout">
          <%= link_to "Previous", "/user_intake/upersonal_informations/new", :class => "button-secondary margin-left-auto" %>
          <%= link_to "Next", "/user_intake/user_shifts/new", :class => "button-primary margin-left-auto" %>
      </div>
    </div>
  </div>
</div>
