<div class="form-slide">
  <div class="question-form-wrap">
    <div class="question-form-header">
      <p class= "text-color-blue text-weight-semibold text-style-allcaps text-size-small">Question 5 / 10</p>
      <div class="question-form-title">
        <h2 class="heading-style-h4">In which city are you looking for a CoRenter?</h2>
        <p>CoRent will automatically match you with other parents near your location</p>
      </div>
    </div>
    <%= simple_form_for @profile_research, html: { class: 'form' } do |f| %>
        <%= f.error_notification %>
          <div class="map-wrap" data-controller="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            <%= f.input :location, as: :string, input_html: {class:"input-field", placeholder: "The city your looking for...", data: {map_target: "address"}}, wrapper_html: { class: 'map-input-wrap'}, label: false %>
            <div style="width: 100%; height: 600px;"></div>
          </div>
          <div class="position-between-step5">
            <%= link_to "Previous", new_user_intake_user_shift_path, :class => "form-previous-button button-secondary" %>
            <%= f.submit "Next", class: "form-next-button-step5" %>
          </div>
    <% end %>
  </div>
</div>
