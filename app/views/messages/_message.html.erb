
<div class="d-flex">
  <% if message.user != current_user %>
    <% if message.user.photo.attached? %>
      <%= cl_image_tag message.user.photo.key, class: "profil-picture", alt: "avatar" %>
    <% else %>
      <%= image_tag message.user.avatar_url_safe, class: 'avatar-img-message', alt: message.user.first_name %>
    <% end %>
  <%end %>

  <div id="message-<%= message.id %>">
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%b %e at %H:%M") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
