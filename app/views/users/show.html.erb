<h1>Users#show</h1>

<div class="banner">
  <div class="container">
    <div class="avatar-img">
      <% if @user.avatar_url? %>
          <img class="absolute_img" src="<%= @user.avatar_url %>" alt="<%= @user.first_name %>">
      <% end %>
    </div>
    <div class="banner-img">
      <h1><%= @user.first_name %></h1>
    </div>
    <div class="tag-rythm d-flex">
      <span><%= @user.rythm %></span>
      <span><%= @user.alternance %></span>
    </div>
  </div>
</div>

<div class="user-description">
  <div class="container d-flex">
    <div class="col">
      <div class="row">
        <%= @user.long_description %>
      </div>

    <div class="row">
      <div class="d-flex">
        <%= @user.min_budget%>
        <span> - </span>
        <%= @user.max_budget%>
      </div>
    </div>
  </div>

    <div class="col">
      <div class="row">
        <h3>My children</h3>
        <ul>
        <% @children.each do |child|  %>
          <li><%= child.first_name %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

  <div class="user-profil">
    <div class="container d-flex">
      <div class="col">
        <div class="row">
          <div class="map-location">
