          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
        <%else  %>
          <i class="fa-solid fa-star"></i>
        <%end %>
       </div>
      </div>

      <div class="row">
       <div class="d-flex">
      <h4>Lifestyle</h4>
