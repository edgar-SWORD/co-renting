        <%else  %>
          <i class="fa-solid fa-star"></i>
        <%end %>
       </div>
      </div>
    </div>
    </div>
    </div>
  </div>
</div>

<div class="ideal-flat">
<h4>My ideal flat</h4>
<div class="col">
<div class="row">
<%= @profile_research.flat%>
</div>
</div>
</div>
