<div class="form-slide">
  <div class="question-form-wrap">
    <div class="question-form-header">
      <p class= "text-color-blue text-weight-semibold text-style-allcaps text-size-small">Question 1 / 10</p>
      <div class="question-form-title">
        <h2 class="heading-style-h4">Letâ€™s get to know each other!</h2>
        <p>Let's start with some basic information</p>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>

        <%= f.error_notification %>
        <div class="form-row">
          <%= f.input :first_name, as: :string, input_html: {class:"input-field", placeholder: "Jean"}, wrapper_html: { class: 'input-wrap' } %>
          <%= f.input :last_name, as: :string, input_html: {class:"input-field", placeholder: "Martel"}, wrapper_html: { class: 'input-wrap' } %>
        </div>
        <div class="form-row">
          <%= f.input :email, as: :email, input_html: {class:"input-field", placeholder: "jean.martel@gmail.com"}, wrapper_html: { class: 'input-wrap' } %>
          <%= f.input :job_title, as: :string, input_html: {class:"input-field", placeholder: "Entrepreneur"}, wrapper_html: { class: 'input-wrap' } %>
        </div>
        <div class="form-row custo-address">
          <%= f.input :address,
                        as: :string,
                        input_html: {data: {address_autocomplete_target: "location"}, class:"input-field d-none", placeholder:"80 rue de la Paix, Paris"},
                        wrapper_html: { data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}, class: 'input-wrap' } %>
          <%= f.input :photo,
                        as: :file,
                        input_html: {class:"input-field", placeholder: "Select a picture"},
                        wrapper_html: { class: 'input-wrap' },
                        label:"Profile picture" %>
        </div>
        <div class="form-row">
          <%= f.input :password,
                        as: :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class:"input-field" },
                        wrapper_html: {class:"input-wrap"} %>
          <%= f.input :password_confirmation,
                        as: :password,
                        required: true,
                        input_html: { autocomplete: "new-password", class:"input-field" },
                        wrapper_html: {class: "input-wrap"} %>
        </div>


        <%= f.submit "Next", class: "form-next-button" %>

    <% end %>

  </div>
</div>
